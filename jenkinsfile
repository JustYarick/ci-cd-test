pipeline {
    agent {
        kubernetes {
            defaultContainer 'docker'
            yamlFile 'agentpod.yaml'
        }
    }
    
    stages {
        stage('Clone repository') {
            steps {
                checkout scm
            }
        }
        
        stage('Build image') {
            steps {
                container('docker') {
                    script {
                        app = docker.build("yaricks/ci-cd-test")
                    }
                }
            }
        }
        
        stage('Test image') {
            steps {
                container('docker') {
                    script {
                        app.inside {
                            sh 'echo "Tests passed"'
                        }
                    }
                }
            }
        }
        
        stage('Push image') {
            steps {
                container('docker') {
                    script {
                        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                            app.push("${env.BUILD_NUMBER}")
                        }
                    }
                }
            }
        }
    }
}
