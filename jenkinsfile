pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "yaricks/ci-cd-test"
        REGISTRY_CREDENTIALS = "dockerhub-credentials-id"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                container('kaniko') {
                    sh "/kaniko/executor --context=/workspace --dockerfile=/workspace/Dockerfile --no-push"
                }
            }
        }
    }
}
